if choice == '1':
   print(num1, "+", num2, "=", num1 + num2)
elif choice == '2':
   print(num1, "-", num2, "=", num1 - num2)
elif choice == '3':
   print(num1, "×", num2, "=", num1 * num2)
elif choice == '4':
   print(num1, "÷", num2, "=", num1 / num2)
